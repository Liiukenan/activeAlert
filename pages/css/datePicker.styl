
.horizontal-container {
    .scroll-wrapper {
        width: 8rem;
        margin: 80px auto;
        border: 3px solid #42b983;
        border-radius: 5px;
        overflow: hidden;
        display:flex
        flex-direction:row-reverse;
        .scroll-content {
            display: inline-block;
            
        }
        .scroll-item {
            height: 50px;
            line-height: 50px;
            font-size: 24px;
            display: inline-block;
            text-align: center;
            padding: 0 10px;
        }
    }
}